<% layout('layouts/boilerplate')%>
    <div class="row">
        <h1 class="text-center">New Location</h1>
        <div class="col-md-6 offset-md-3">
            <form action="/locations" method="POST" class="needs-validation" novalidate enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" id="title" name="location[title]" required>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="address">Address</label>
                    <input class="form-control" type="text" id="address" name="location[address]" required>
                </div>
                <!-- <div class="mb-3">
                    <label class="form-label" for="image">Image URL</label>
                    <input class="form-control" type="text" id="image" name="location[image]" required>
                </div> -->
                <div class="mb-3">
                    <label class="form-label" for="description">Description</label>
                    <textarea class="form-control" type="text" id="description" name="location[description]"
                        required></textarea>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="budget">Budget for Visiting</label>
                    <div class="input-group">
                        <span class="input-group-text" id="budget-label">$</span>
                        <input type="text" class="form-control" id="budget" placeholder="0.00" aria-label="budget"
                            aria-describedby="budget-label" name="location[budget]" required>
                    </div>
                </div>

                <div class="mb-3">
                    <div class="form-file custom-file">
                        <input type="file" class="form-file-input" id="image" name="image" multiple>
                        <label class="form-file-label" for="image">
                            <span class="form-file-text custom-file-label">Image(s)</span>
                            <span class="form-file-button">Choose</span>
                        </label>
                    </div>
                </div>
                <hr>
                <div class="mb-3">
                    <button class="btn btn-secondary btn-block">Add location</button>
                </div>
            </form>
        </div>
    </div>