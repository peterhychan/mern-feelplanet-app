<% layout('layouts/boilerplate')%>

    <h1>All Locations</h1>
    <div>
        <a href="/locations/new">Add Location</a>
    </div>
    <% for (let location of locations){%>
        <div class="card" mb-3>
            <div class="row">
                <div class="col-md-4">
                    <img class="img-fluid" alt="" src="<%=location.images[0].url%>">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= location.title %>
                        </h5>
                        <p class="card-text">
                            <%= location.description %>
                        </p>
                        <p class="card-text">
                            <small class="text-muted">
                                <%= location.address %>
                            </small>
                        </p>
                        <a class="btn btn-primary" href="/locations/<%=location._id%>">View <%=location.title%>
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <% }%>